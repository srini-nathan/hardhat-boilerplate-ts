    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
